<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlProgressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/progress_bar_background"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="gone"
    android:padding="@dimen/pbPadding">

    <cn.refactor.smileyloadingview.lib.SmileyLoadingView
        android:id="@+id/smileyLoadingView"
        xmlns:slv="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/pbSize"
        android:layout_height="@dimen/pbSize"
        slv:duration="2000"
        slv:strokeColor="@color/colorPrimary"
        slv:strokeWidth="@dimen/pbStroke"/>

</RelativeLayout>